<!-- views/partials/_header.ejs -->
<title> TinyApp </title>
<% if (username){ %>
  <h1> Username: <%= username %>
    <form action="/logout" method="POST" id="logout"> </form>
    <button type="submit" form="logout"> LOGOUT </button>
 </h1>
<% } else { %>
<h1>
  <form action="/login" method="POST" id="login" style="margin:10px;">
    <input id="login" type="text" name="username" placeholder="Enter Login" style="width: 300px">
    <button type="submit" form="login">SUBMIT</button>
  </form>
</h1>
<% } %>